<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialogLayout_2">

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:src="@drawable/character_1"
            android:layout_margin="5dp"
            android:background="@drawable/iconbackground"
            android:id="@+id/character_1"/>

        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:background="@drawable/iconbackground"
            android:src="@drawable/character_2"
            android:layout_margin="5dp"
            android:id="@+id/character_2"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:background="@drawable/iconbackground"
            android:src="@drawable/character_3"
            android:layout_margin="5dp"
            android:id="@+id/character_3"
            android:layout_centerInParent="true"/>

</RelativeLayout>
