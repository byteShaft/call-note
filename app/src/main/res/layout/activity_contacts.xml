<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ContactsActivity">

    <EditText
        android:id="@+id/edittext_create_note"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter text here to create a note..."
        />

    <Button
        android:id="@+id/add_another_note"
        android:layout_below="@+id/edittext_create_note"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Add another note"
        android:layout_marginLeft="50dp"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/attach_contacts"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_create_note"
        android:layout_alignParentRight="true"
        android:text="Attach contacts"
        android:layout_marginRight="50dp"/>



</RelativeLayout>